<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.api.mapper.UserMapper">

    <select id="getTime" resultType="String">
        SELECT NOW()
    </select>

    <insert id="signup">
        INSERT INTO user (name, password, email, group_id, user_id)
        VALUES (#{name}, #{password}, #{email}, #{group_id}, #{user_id})
    </insert>

    <select id="findUserByName" resultType="com.api.domain.User">
        SELECT name, email, group_id, user_id FROM user WHERE name = #{_name}
    </select>

    <select id="findUserById" resultType="com.api.domain.User">
        SELECT * FROM user WHERE user_id = #{_id}
    </select>
</mapper>